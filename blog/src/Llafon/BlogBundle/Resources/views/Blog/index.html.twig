{% extends 'LlafonBlogBundle::base.html.twig' %}

{% block title %} Accueil - {{ parent() }} {% endblock %}

{% block body %} 
    {% for post in pagination %}
        {% include 'LlafonBlogBundle::Blog/postTemplate.html.twig' with {'post_id': post.getId(), 'post_title': post.getTitle(), 'post_author': post.getAuthor(), 'post_date': post.getDateString(), 'post_image': post.getImageName(), 'post_content': post.getContent()} %}
    {% endfor %}
    
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
