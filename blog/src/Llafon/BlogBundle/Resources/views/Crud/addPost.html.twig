{% extends 'LlafonBlogBundle::crud_base.html.twig' %}

{% block title %} Ajout Article - {{ parent() }} {% endblock %}
{% block body_title %} Articles <small>Cr√©ation</small> {% endblock %}

{% block body %}
    <div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
  {{ form_row(form._token) }}
  
    <div class="form-group">
        <input type="text" class="form-control input-lg" name="{{ form.title.vars["full_name"] }}" placeholder="{{ form.title.vars["label"]|trans }}" value="{{ form.title.vars["value"] }}" required="required" />
    </div>
    
    <div class="form-group">
        <textarea class="form-control input-lg" rows="15" name="{{ form.content.vars["full_name"] }}" placeholder="{{ form.content.vars["label"]|trans }}" required="required">{{ form.content.vars["value"] }}</textarea>
    </div>
    
    <div class="form-group">
        <label for="NewsImage0Image" class="col col-md-1 control-label">Image</label>
        <div class="col col-md-11">
            {{ form_row(form.image_name) }}
        </div>
    </div>
    
 
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
    </form>
    </div>
{% endblock %}