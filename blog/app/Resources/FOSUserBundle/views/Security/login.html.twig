{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}    
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="text-center">Connexion</h1>
                    {% if error %}

                        <div class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Error:</span>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>

                    {% endif %}
                </div>
                <div class="modal-body">
                    <form action="{{ path("fos_user_security_check") }}" method="post" class="form col-md-12 center-block">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="form-group">
                            <input type="text" id="username" class="form-control input-lg" name="_username" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" required="required" />
                        </div>
                        <div class="form-group">
                            <input type="password" id="password" class="form-control input-lg" placeholder="{{ 'security.login.password'|trans }}" name="_password" required="required" />
                        </div>
                        <div class="form-group">
                            <a href="#"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label></a>
                        </div>
                        <div class="form-group">
                            <input type="submit" id="_submit" class="btn btn-primary btn-lg btn-block" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                       
                        </div>
                    </form>
                        <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <a href="{{ path('fos_user_registration_register') }}">{{ 'security.login.register'|trans }}</a> - <a href="{{ path('fos_user_registration_register') }}"> Mot de passe oubli√©?</a>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
