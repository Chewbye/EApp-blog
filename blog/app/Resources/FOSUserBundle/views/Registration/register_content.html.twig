{% trans_default_domain 'FOSUserBundle' %}
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-center">Inscription</h1>

                {% if (form_errors(form.username)|length>0) or (form_errors(form.email)|length>0) or (form_errors(form.plainPassword.first)|length>0)  %}
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        {{ form_errors(form.username) }}
                        {{ form_errors(form.email) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                {% endif %}

            </div>
            <div class="modal-body">
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                    {{ form_row(form._token) }}
                    <div class="form-group">
                        <input type="text" id="username" class="form-control input-lg" name="{{ form.username.vars["full_name"] }}" placeholder="{{ form.username.vars["label"]|trans }}" value="{{ form.username.vars["value"] }}" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="text" id="username" class="form-control input-lg" name="{{ form.email.vars["full_name"] }}" placeholder="{{ form.email.vars["label"]|trans }}" value="{{ form.email.vars["value"] }}" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" class="form-control input-lg" placeholder="{{ form.plainPassword.first.vars["label"]|trans }}" name="{{ form.plainPassword.first.vars["full_name"] }}" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" class="form-control input-lg" placeholder="{{ form.plainPassword.second.vars["label"]|trans }}" name="{{ form.plainPassword.second.vars["full_name"] }}" required="required" />
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="{{ 'registration.submit'|trans }}" />
                        </div>
                    </div>
                </form>
                <div class="clearfix"></div>
            </div>
            <div class="modal-footer">
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            </div>
        </div>
    </div>
</div>
